<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
    </style>

    <!-- MaterialButton theme for enabled/diabled state. -->
    <style name="ButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_backgroundcolor_state_list</item>
        <item name="android:textColor">@color/button_textcolor_state_list</item>
    </style>
</resources>
