<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Outline button style: To be used as a secondary option button-->
    <style name="OutlineButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingHorizontal">@dimen/buttonHorizontalPadding</item>
        <item name="android:paddingVertical">@dimen/buttonVerticalPadding</item>
        <item name="android:insetTop">@dimen/buttonMargin</item>
        <item name="android:insetBottom">@dimen/buttonMargin</item>
        <item name="android:insetLeft">@dimen/buttonMargin</item>
        <item name="android:insetRight">@dimen/buttonMargin</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Filled button style: To be used as a primary option button-->
    <style name="RegularButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:paddingHorizontal">@dimen/buttonHorizontalPadding</item>
        <item name="android:paddingVertical">@dimen/buttonVerticalPadding</item>
        <item name="android:insetTop">@dimen/buttonMargin</item>
        <item name="android:insetLeft">@dimen/buttonMargin</item>
        <item name="android:insetRight">@dimen/buttonMargin</item>
        <item name="android:insetBottom">@dimen/buttonMargin</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Icon button style: To be used with an 24dp icon without any text-->
    <style name="IconButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_width">52dp</item>
        <item name="android:paddingHorizontal">0dp</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <!--Toggle button style: To be used with a MaterialButtonToggleGroup -->
    <style name="ToggleButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingHorizontal">@dimen/buttonHorizontalPadding</item>
        <item name="android:paddingVertical">@dimen/buttonVerticalPadding</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SamplesAlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="SamplesAppBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="colorSurface">@color/actionBarColor</item>
        <item name="android:elevation">12dp</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:progressBackgroundTint">@color/colorBackground</item>
        <item name="actionBarTheme">@style/SamplesAppBar</item>
        <item name="materialButtonStyle">@style/RegularButton</item>
        <item name="materialButtonOutlinedStyle">@style/OutlineButton</item>
        <item name="materialAlertDialogTheme">@style/SamplesAlertDialog</item>
        <item name="alertDialogTheme">@style/SamplesAlertDialog</item>
        <item name="alertDialogStyle">@style/SamplesAlertDialog</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme"/>
</resources>
